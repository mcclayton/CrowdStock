@{
    ViewBag.Title = "Index";
}

<div class="container">
    <br />
    <div class="form-group">
        <div id="searchTextField">
            <input type="text" class="form-control typeahead" placeholder="Search">
        </div>
        <br />
        <div class="form-group">
            <input type="radio" name="mtype" value="stocks">Stocks
            <input type="radio" name="mtype" value="users">Users
            <a class="btn btn-success" type="submit">Search</a><br />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Top Stocks</h3>
        @{Html.RenderPartial("StocksPartial", ViewBag.TopStocks as IEnumerable<CrowdStock.Models.Stock>);}
    </div>
    <div class="col-md-6">
        <h3>Top Users</h3>
        @{Html.RenderPartial("UsersPartial", ViewBag.TopUsers as IEnumerable<CrowdStock.Models.ApplicationUser>);}
    </div>
</div>
