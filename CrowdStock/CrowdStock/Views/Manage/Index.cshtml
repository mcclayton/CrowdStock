@model CrowdStock.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-lg-2">
            <img class="featurette-image img-circle img-responsive pull-left" src="@Url.Action("Image", "Account", new { id = Model.Id })" height="200" width="200" />
        </div>
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>First Name: </dt>
                <dd>
                    <p>
                        @Html.DisplayFor(model => model.FirstName)
                    </p>
                </dd>
                <dt>Last Name: </dt>
                <dd>
                    <p>
                        @Html.DisplayFor(model => model.LastName)
                    </p>
                </dd>
                <dt>UserName: </dt>
                <dd>
                    <p>
                        @Html.DisplayFor(model => model.UserName)
                    </p>
                </dd>

                <dt>Email: </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>Password:</dt>
                <dd>
                    [
                    @if(Model.HasPassword)
                    {
                        @Html.ActionLink("Change your password", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
                <dt>Image:</dt>
                <dd>
                    [ @Html.ActionLink("Change Image", "ChangeImage") ]
                </dd>
