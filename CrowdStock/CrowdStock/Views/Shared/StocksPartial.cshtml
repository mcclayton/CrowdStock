@model IEnumerable<CrowdStock.Models.Stock>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Vote</th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consensus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>@*Buttons go here*@</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details","Stocks",new {id=item.Id})" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-check"></span> Vote
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consensus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group btn-group-xs">
                        <a href="@Url.Action("Details","Stocks",new {id=item.Id})" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-list-alt"></span>
                            Details
                        </a>
                        @if(User.IsInRole("Administrator"))
                        {
                            <a href="@Url.Action("Edit","Stocks",new {id=item.Id})" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-pencil"></span>
                                Edit
                            </a>
                            <a href="@Url.Action("Delete","Stocks",new {id=item.Id})" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-remove"></span>
                                Delete
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    @Html.ActionLink("View More", "List")
</div>
