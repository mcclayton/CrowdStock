@model IEnumerable<CrowdStock.Models.Stock>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Vote</th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consensus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>@*Buttons go here*@</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    Voting Buttons Go Here
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consensus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Details","Stocks",new {id=item.Id})" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-list-alt"></span>
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a href="#">View More</a>
</div>
